<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/background"
    android:layout_height="wrap_content"
    android:padding="15dp"
    tools:context="com.example.robin.app.Status_Upload">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/image"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:visibility="invisible"
        android:layout_below="@+id/image"
        android:id="@+id/name"/>

    <ImageButton
        android:id="@+id/choose"
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/image"
        android:layout_marginTop="189dp"
        android:background="@drawable/bshapes"
        android:src="@drawable/sel_photos" />

    <ImageButton
        android:id="@+id/upload"
        android:layout_width="40sp"
        android:layout_height="40sp"

        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/choose"
        android:layout_marginEnd="140dp"
        android:background="@drawable/bshapes"
        android:src="@drawable/ok" />

    <ImageButton
        android:id="@+id/open_camera"
        android:layout_width="40sp"
        android:layout_height="39dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/choose"
        android:layout_marginStart="81dp"
        android:background="@drawable/bshapes"
        android:src="@drawable/camera" />

    <EditText
        android:layout_width="match_parent"
        android:background="@drawable/eshapes"
        android:layout_marginRight="90dp"
        android:hint="Type a Status"
        android:id="@+id/status"
        android:padding="10dp"
        android:layout_below="@+id/name"
        android:inputType="textMultiLine"
        android:scrollbars="vertical"
        android:gravity="top|left"
        android:layout_height="100sp" />
</RelativeLayout>
